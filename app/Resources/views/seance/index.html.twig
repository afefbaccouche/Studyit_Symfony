{% extends 'base.html.twig' %}

{% block body %}
    <h1>Seances list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Duree</th>
                <th>Heuredebut</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td><a href="{{ path('seance_show', { 'id': seance.id }) }}">{{ seance.id }}</a></td>
                <td>{{ seance.duree }}</td>
                <td>{{ seance.heureDebut }}</td>
                <td>{{ seance.date }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('seance_show', { 'id': seance.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('seance_edit', { 'id': seance.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('seance_new') }}">Create a new seance</a>
        </li>
    </ul>
{% endblock %}
